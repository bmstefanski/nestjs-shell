{
  "name": "nestjs-shell",
  "version": "1.4.0",
  "description": "An interactive shell for NestJS which allows you to plug-in your custom commands and use them when the app's running",
  "keywords": [
    "nest",
    "nestjs",
    "shell",
    "console"
  ],
  "author": {
    "name": "Bart Stefanski",
    "email": "contact@bstefanski.com",
    "url": "https://bstefanski.com/"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write \"lib/**/*.ts\" \"lib/**/*.spec.ts\"",
    "prepublish": "npm run format",
    "publish": "",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "peerDependencies": {
    "@nestjs/common": "^8.0.4",
    "@nestjs/core": "^8.0.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.2",
    "@nestjs/common": "^8.0.4",
    "@nestjs/core": "^8.0.4",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.4",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.3",
    "@types/supertest": "^2.0.11",
    "coveralls": "^3.1.0",
    "jest": "^27.0.6",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "supertest": "^4.0.2",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.2",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "lib",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "lib/__stubs__"
    ]
  }
}
