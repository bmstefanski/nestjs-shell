{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": ["*.ts", "**/*.ts"],
  "exclude": ["./index.ts", "./index.d.ts", "./**/*.spec.ts", "./lib/__stubs__", "node_modules"]
}
